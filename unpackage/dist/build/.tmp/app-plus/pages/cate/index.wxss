
.page-body {
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		background: #fff;
		overflow: hidden;
}
.nav {
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		width: 100%;
}
.nav-left {
		width: 25%;
		background: #fafafa;
}
.nav-left-item {
		height: 90rpx;
		border-right: solid 1px #f1f1f1;
		border-bottom: solid 1px #f1f1f1;
		font-size: 30rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		    -ms-flex-align: center;
		        align-items: center;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		    -ms-flex-pack: center;
		        justify-content: center;
}
.nav-right {
		width: 75%;
}
.box {
		display: block;
		overflow: hidden;
		border-bottom: 20rpx solid #f3f3f3;
		padding:0 0 10rpx 0;
}
.box:last-child {
		border: none;
}
.nav-right-item2 {
		width: 28%;
		height: 130rpx;
		float: left;
		text-align: left;
		padding: 11rpx;
		font-size: 28rpx;
		background: #fff;
}
.nav-right-item {
		width: 100%;
		min-height: 130rpx;
		float: left;
		text-align: left;
		padding: 20rpx;
		font-size: 28rpx;
		background: #fff;
}
.nav-right-item3 {
		width: 100%;
		height: 80rpx;
		float: left;
		text-align: left;
		padding: 20rpx;
		padding-bottom:0;
		font-size: 34rpx;
		background: #fff;
}
.nav-right-item image {
		width: 150rpx;
		height: 150rpx;
}
.active {
		color: #FF80AB;
		background: #fff;
		border-right: 0;
}
::-webkit-scrollbar {/*取消小程序的默认导航条样式*/
   width: 0;
   height: 0;
   color: transparent;
}

